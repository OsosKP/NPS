@using ParksService.ViewModels
@model IEnumerable<ParkViewModel>

@{
    ViewData["Title"] = "Explore Parks";
}

<style>
    body {
        font-family: 'Bitter', serif, "Helvetica Neue", Helvetica, Arial, sans-serif;
    }
</style>

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">National Park Service</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Welcome <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Explore">Explore</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Directory">Directory</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<body>
    <div class="explore">
        <div class="form-group">
            <label class="header-label">Search Parks by State</label>
            <input name="state" class="form-control states-box" list="states-list" />
            <datalist id="states-list">
                @* Options populated from JS *@
            </datalist>
            <button class="btn btn-primary btn-lg search-button">Search</button>
        </div>
        
        <div class="search-results form-control">

        </div>
        
        

        <hr />

        @foreach (var park in Model)
        {
            <p>@park.FullName</p>
            <ul>
                <li>@park.Id</li>
                <li>@park.FullState</li>
            </ul>
        }
    </div>
</body>


@section scripts {
    <script type="text/javascript" src="~/Scripts/ExplorePageScripts.js"></script>
}