@using ParksService.ViewModels
@model IEnumerable<ParkViewModel>

@{
    ViewData["Title"] = "Explore Parks";
}

<style>
    body {
        font-family: 'Bitter', serif, "Helvetica Neue", Helvetica, Arial, sans-serif;
    }
</style>

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">National Park Service</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Welcome <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Explore">Explore</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Directory">Directory</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">NPS 2018</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<body>
    <div class="form-group">
        <div class="explore">
            <label for="autocomplete" class="header-label">Search Parks by State</label>
            <button id="clear-results-button" class="btn btn-primary" style="float: right;">Clear Results</button>
            <div id="autocomplete-container" class="form-group">
                <input id="autocomplete" type="text" class="form-control" placeholder="Enter State Name" autofocus />
            </div>
            <hr />
            <div class="search-results form-control">
                @* Results populated from JS *@
            </div>
        </div>
    </div>
</body>

@section scripts {
    <script type="text/javascript" src="~/Scripts/ExplorePageScripts.js"></script>
    <script type="text/javascript" src="~/Scripts/Helpers/AutoCompleteModule.js"></script>
}